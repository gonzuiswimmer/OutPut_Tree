<%= render "shared/header" %>

<main>
  <div class='transaction-contents'>
    <div class='transaction-main'>
      <h2 class='page-title'>
        購入内容の確認
      </h2>
      <%# 購入内容の表示 %>
      <div class='buy-item-info'>
        <%# <%= image_tag @item.item_image, class: 'buy-item-img' %>
        <div class='buy-item-right-content'>
          <h3 class='buy-item-text'>
            タイトル：　<%= @item.item_name %>
          </h3>
        </div>
        <div class="buy-item-detail">
          ***詳細は購入後に閲覧できます。***
        </div>
      </div>
      <%# /購入内容の表示 %>


      <%= form_with model: @order, url:orders_path, id: 'charge-form',class: 'transaction-form-wrap',local: true do |f| %>
        <%# <%= render 'shared/error_messages', model: form.object %>
      <%# カード情報の入力 %>
      <div class='credit-card-form'>
        <h3 class='info-input-haedline'>
          クレジットカード情報入力
        </h3>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">カード情報(必須)</label>
          </div>
          <%= f.text_field :card_number, class:"input-default", id:"card-number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
          <div class='available-card'>
            <%# <%= image_tag 'card-visa.gif', class: 'card-logo'%>
            <%# <%= image_tag 'card-mastercard.gif', class: 'card-logo'%>
            <%# <%= image_tag 'card-jcb.gif', class: 'card-logo'%>
            <%# <%= image_tag 'card-amex.gif', class: 'card-logo'%>
          </div>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">有効期限</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='input-expiration-date-wrap'>
            <%= f.select :exp_month, 1..12, {include_blank: "---"}, class:"input-expiration-date", id:"card-exp-month", placeholder:"例)3" %>
            <p>月</p>
            <%= f.select :exp_year, 22..26, {include_blank: "---"}, class:"input-expiration-date", id:"card-exp-year", placeholder:"例)23" %>
            <p>年</p>
          </div>
        </div>
        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">セキュリティコード</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_field :cvc, class:"input-default", id:"card-cvc", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4" %>
        </div>
      </div>
      <%# /カード情報の入力 %>
      
      <%# 支払額の表示 %>
      <div class='item-payment'>
        <h3 class='item-payment-title'>
          支払金額
        </h3>
        <p class='item-payment-price'>
          ¥<%= @item.price %>
        </p>
      </div>
      <%# /支払額の表示 %>

      <div class='buy-btn'>
        <%= f.submit "購入" ,class:"buy-red-btn", id:"button" %>
      </div>
      <% end %>
    </div>
  </div>
</main>

<%= render "shared/footer.html.erb" %>