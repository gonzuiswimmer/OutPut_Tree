<%= render "shared/header" %>

<main>
<div class="form_wrapper">
  <h3>出品情報編集ページ</h3>
  <%= form_with model: @item, url: output_item_path, local: true do |form| %>
    <%= render 'shared/error_messages', model: form.object %>
    <div class="form_flex">
      <div class="form_item">
        <%= form.label :item_name, "商品名" %>
        <%= form.text_field :item_name, placeholder: "商品名" %>
      </div>
      <div class="form_item">
        <%= form.label :item_detail, "商品内容" %>
        <%= form.text_area :item_detail, placeholder: "商品内容", rows: "10" %>
      </div>
      <div class="form_item">
        <%= form.label :price, "出品金額" %>
        <%= form.text_field :price, placeholder: "例）1200"%>
      </div>
      <%# <div class="form_item">
        <%= form.label :item_image, "画像(任意)" %>
        <%# <%= form.file_field :item_image, id:"item-image" %>
      <%# </div> %>
      <div class="form_item">
         <%= form.submit "出品情報を更新する", class: "edit_profile_btn" %>
      </div>
      <%# <div class="form_item">
         <%= link_to "出品情報を更新する", output_item_path(@item.id), method: :patch, class: "edit_profile_btn"%>
         <%# <%= link_to "出品情報を削除する", output_item_path(@item.id), method: :delete, class: "delete_btn", data: {confirm: "出品情報を削除しますか？"} %> %>
      <%# </div> %> %>
    </div>
  <% end %>
</div>
</main>

<%= render "shared/footer.html.erb" %>